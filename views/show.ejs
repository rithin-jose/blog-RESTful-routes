<%- include("partials/header")%>
<div class="ui main text container">
    <div class="ui huge header"><%= blog.title%></div>
    <div class="ui top attached segment">
        <div class="item">
            <img src=<%= blog.image%> class="ui centered rounded image" alt="blog photo" height="300px">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- blog.body %></p>
            </div>
            <a class="ui inverted orange button" href="/blogs/<%= blog._id%>/edit">Edit</a>
            <form action="/blogs/<%= blog._id%>?_method=DELETE" method="POST" id="delete-form">
                <button class="ui inverted red button">Delete</button>
            </form>
        </div>
    </div>
</div>

<%- include("partials/footer")%>